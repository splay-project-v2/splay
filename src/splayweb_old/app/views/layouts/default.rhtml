All rights reserved.
-->

<%= render :file => "layouts/top.rhtml" %>

<p style="color: green"><%= flash[:notice] %></p>
<%= yield  %>

<%= render :file => "layouts/bottom.rhtml" %>

<% if SplayController::mode != "local" and SplayController::mode != "live" %>
  <script src="http://www.google-analytics.com/urchin.js" type="text/javascript">
  </script>
  <script type="text/javascript">
    _uacct = "<%= SplayController::google_urchin %>";
  urchinTracker();
  </script>
<% end %>
</body>
</html>
